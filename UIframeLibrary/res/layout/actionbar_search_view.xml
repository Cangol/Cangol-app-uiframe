<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/actionbar_search_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/actionbar_search_home"
        style="@style/ActionBarItem"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:layout_marginLeft="-8dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:contentDescription="@string/app_name"
            android:src="@drawable/actionbar_up_indicator" />

        <ImageView
            android:id="@+id/actionbar_search_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <mobi.cangol.mobile.actionbar.view.ClearableEditText
        android:id="@+id/actionbar_search_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:singleLine="true"
        android:background="@drawable/actionbar_searchview"
        android:drawableLeft="@drawable/actionbar_search"
        android:textColor="@android:color/white"
        android:layout_marginRight="8dp"
        android:drawablePadding="4dp" />

    <ImageView
        android:id="@+id/actionbar_search_voice"
        style="@style/ActionBarItem"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_height"
        android:src="@drawable/actionbar_voice"
        android:contentDescription="@string/app_name" />

</LinearLayout>